#!/bin/bash -e

# Customize python installation.

if [[ -z "$DOTFILES_DIR" ]] ; then
    echo "DOTFILES_DIR is undefined."
    exit 2
fi

# Import custom functions.
source $DOTFILES_DIR/dotfiles_lib


# Install inputrc (configuration for readline library) and pystartup.
INPUTRC="$HOME/.inputrc"
PYSTARTUP="$HOME/.pystartup"
if [[ ! -e "$INPUTRC" ]] ; then
    ln -s -v "$DOTFILES_DIR/python/inputrc" "$INPUTRC"
fi
if [[ ! -e "$PYSTARTUP" ]] ; then
    ln -s -v "$DOTFILES_DIR/python/pystartup" "$PYSTARTUP"
fi

# sudo is not necessary on macOS.
if [[ "$OSTYPE" == darwin* ]] ; then
    INSTALL_CMD="pip3"
else
    INSTALL_CMD="sudo pip3"
fi

# Install the latest version of pip.
if ! command -v pip3 > /dev/null 2>&1; then
    eecho "pip3 not found. Please install it."
    exit 1
else
    # If pip is already installed, use it to update itself.
    $INSTALL_CMD install --upgrade pip
fi

# Install all the python packages we want.
$INSTALL_CMD install --upgrade \
    jupyter \
    jupyterlab \
    numpy \
    matplotlib \
    scipy \
    flake8
