[push]
    # When you use 'git push', push only the current branch, not all branches.
    default = simple
    recurseSubmodules = check
[diff]
    tool = icdiff
[difftool]
    prompt = false
[difftool "icdiff"]
    cmd = icdiff --line-numbers $LOCAL $REMOTE
[pager]
    difftool = true
[merge]
    tool = vimdiff
[alias]
    personalprofile = config user.email \"tymcauley@gmail.com\"
    workprofile = config user.email \"tynan@remicro.com\"
    dt = difftool
    diffws = diff --ignore-space-at-eol --ignore-space-change --ignore-all-space --ignore-blank-lines
    showtool = "!f() { git difftool $1^ $1; }; f"
    added = difftool --cached
