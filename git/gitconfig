	useConfigOnly = true
[init]
	defaultBranch = main
[push]
	# When you use 'git push', push only the current branch, not all branches.
	default = simple
	recurseSubmodules = check
[merge]
	tool = diffconflicts
[alias]
	emailpersonal = config user.email \"16469394+tymcauley@users.noreply.github.com\"
[include]
	path = ~/.gitconfig.private
	path = ~/.config/git/tokyonight_storm.gitconfig
[core]
	excludesfile = ~/.config/git/gitignore_global
[mergetool "diffconflicts"]
	cmd = vim -c DiffConflictsWithHistory \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[mergetool]
	keepBackup = false
[diff]
	colorMoved = default
	submodule = log
	ignoreSubmodules = dirty
[pull]
	rebase = false
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[interactive]
	diffFilter = delta --color-only --features=interactive
[delta]
	commit-regex = "^Commit: "
	features = decorations navigate
	line-numbers = true
	side-by-side = true
[delta "decorations"]
	commit-decoration-style = blue ol
	commit-style = raw
	file-style = omit
